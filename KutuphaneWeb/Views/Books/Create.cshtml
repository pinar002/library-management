@{
    ViewData["Title"] = "Yeni Kitap Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-4">
                <h1><i class="bi bi-plus-circle"></i> Yeni Kitap Ekle</h1>
                <p class="text-muted">Kütüphaneye yeni bir kitap ekleyin</p>
            </div>

            <div class="card">
                <div class="card-body">
                    <form id="createForm">
                        <div class="row">
                            <!-- Title -->
                            <div class="col-md-12 mb-3">
                                <label for="title" class="form-label">
                                    <i class="bi bi-book"></i> Kitap Adı *
                                </label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       placeholder="Örn: Suç ve Ceza" required>
                                <div class="invalid-feedback">Kitap adı zorunludur</div>
                            </div>

                            <!-- Publisher (Select) -->
                            <div class="col-md-6 mb-3">
                                <label for="publisherId" class="form-label">
                                    <i class="bi bi-building"></i> Yayınevi *
                                </label>
                                <select class="form-select" id="publisherId" name="publisherId" required>
                                    <option value="" selected disabled>Seçiniz...</option>
                                </select>
                                <div class="invalid-feedback">Lütfen yayınevi seçiniz</div>
                            </div>

                            <!-- Publish Year -->
                            <div class="col-md-6 mb-3">
                                <label for="publishYear" class="form-label">
                                    <i class="bi bi-calendar"></i> Basım Yılı
                                </label>
                                <input type="number" class="form-control" id="publishYear" name="publishYear" 
                                       placeholder="Örn: 2020" min="1800" max="2025">
                            </div>

                             <!-- ISBN -->
                            <div class="col-md-6 mb-3">
                                <label for="isbn" class="form-label">
                                    <i class="bi bi-upc"></i> ISBN
                                </label>
                                <input type="text" class="form-control" id="isbn" name="isbn" 
                                       placeholder="Örn: 978-3-16-148410-0">
                            </div>

                            <!-- Stock -->
                            <div class="col-md-6 mb-3">
                                <label for="stockCount" class="form-label">
                                    <i class="bi bi-box-seam"></i> Stok Adedi *
                                </label>
                                <input type="number" class="form-control" id="stockCount" name="stockCount" 
                                       value="1" min="0" required>
                            </div>

                            <!-- Authors (Multi Select / Checkboxes) -->
                            <div class="col-md-12 mb-3">
                                <label class="form-label"><i class="bi bi-person"></i> Yazarlar *</label>
                                <div id="authorsList" class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                                    <!-- Authors will be loaded here -->
                                    <div class="text-muted small">Yükleniyor...</div>
                                </div>
                            </div>

                            <!-- Categories (Multi Select / Checkboxes) -->
                            <div class="col-md-12 mb-3">
                                <label class="form-label"><i class="bi bi-tags"></i> Kategoriler</label>
                                <div id="categoriesList" class="border rounded p-2" style="max-height: 150px; overflow-y: auto;">
                                     <!-- Categories will be loaded here -->
                                     <div class="text-muted small">Yükleniyor...</div>
                                </div>
                            </div>

                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success" id="submitBtn">
                                <i class="bi bi-check-circle"></i> Kitabı Kaydet
                            </button>
                            <a href="/Books/Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert">
        <div class="toast-header">
            <i class="bi bi-info-circle me-2"></i>
            <strong class="me-auto" id="toastTitle">Bildirim</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="toastBody"></div>
    </div>
</div>

<script>
const apiBase = "http://localhost:5045/api";

async function loadData() {
    try {
        // Load Publishers
        const pubRes = await fetch(`${apiBase}/publishers`);
        const publishers = await pubRes.json();
        const pubSelect = document.getElementById('publisherId');
        publishers.forEach(p => {
             const opt = document.createElement('option');
             opt.value = p.id;
             opt.textContent = p.name;
             pubSelect.appendChild(opt);
        });

        // Load Authors
        const authRes = await fetch(`${apiBase}/authors`);
        const authors = await authRes.json();
        const authDiv = document.getElementById('authorsList');
        authDiv.innerHTML = '';
        authors.forEach(a => {
            const div = document.createElement('div');
            div.className = 'form-check';
            div.innerHTML = `
                <input class="form-check-input" type="checkbox" value="${a.id}" id="auth_${a.id}" name="authorIds">
                <label class="form-check-label" for="auth_${a.id}">${a.name}</label>
            `;
            authDiv.appendChild(div);
        });

        // Load Categories
        const catRes = await fetch(`${apiBase}/categories`);
        const categories = await catRes.json();
        const catDiv = document.getElementById('categoriesList');
        catDiv.innerHTML = '';
        categories.forEach(c => {
            const div = document.createElement('div');
            div.className = 'form-check';
            div.innerHTML = `
                <input class="form-check-input" type="checkbox" value="${c.id}" id="cat_${c.id}" name="categoryIds">
                <label class="form-check-label" for="cat_${c.id}">${c.name}</label>
            `;
            catDiv.appendChild(div);
        });

    } catch(e) {
        console.error("Veri yükleme hatası", e);
        showToast("Veriler yüklenirken hata oluştu. API çalışıyor mu?", "Hata");
    }
}

// Load data on page load
document.addEventListener('DOMContentLoaded', loadData);


function showToast(message, title = "Bildirim") {
    const toastEl = document.getElementById('liveToast');
    document.getElementById('toastTitle').textContent = title;
    document.getElementById('toastBody').textContent = message;
    const toast = new bootstrap.Toast(toastEl);
    toast.show();
}

document.getElementById("createForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    
    const form = e.target;
    const submitBtn = document.getElementById("submitBtn");
    
    // Validate Publisher
    if(!form.publisherId.value) {
        showToast("Lütfen bir yayınevi seçin", "Uyarı");
        return;
    }

    // Collect IDs
    const authorIds = Array.from(document.querySelectorAll('input[name="authorIds"]:checked')).map(cb => parseInt(cb.value));
    const categoryIds = Array.from(document.querySelectorAll('input[name="categoryIds"]:checked')).map(cb => parseInt(cb.value));

    if(authorIds.length === 0) {
        showToast("Lütfen en az bir yazar seçin", "Uyarı");
        return;
    }
    
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Kaydediliyor...';

    const bookData = {
        title: form.title.value.trim(),
        isbn: form.isbn.value.trim() || "",
        publishYear: parseInt(form.publishYear.value) || 0,
        stockCount: parseInt(form.stockCount.value) || 0,
        publisherId: parseInt(form.publisherId.value),
        authorIds: authorIds,
        categoryIds: categoryIds
    };
    
    try {
        const res = await fetch(`${apiBase}/books`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(bookData),
            mode: "cors"
        });
        
        if (res.ok) {
            showToast("Kitap başarıyla eklendi!", "Başarılı");
            setTimeout(() => {
                window.location.href = "/Books/Index";
            }, 1000);
        } else {
            const txt = await res.text();
            throw new Error(txt || "API hatası");
        }
    } catch (error) {
        showToast("Kitap eklenirken hata: " + error.message, "Hata");
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="bi bi-check-circle"></i> Kitabı Kaydet';
    }
});
</script>