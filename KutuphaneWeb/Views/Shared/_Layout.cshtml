<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Sistemi</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    
    <style>
        body {
            background-color: #f8f9fa;
        }
        
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        
        .card {
            box-shadow: 0 0 10px rgba(0,0,0,.05);
            border: none;
        }
        
        footer {
            margin-top: 50px;
            padding: 20px 0;
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-book-fill"></i> Kütüphane Sistemi
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house"></i> Ana Sayfa
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/Books/Index">
                            <i class="bi bi-book"></i> Kitaplar
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/Books/Create">
                            <i class="bi bi-plus-circle"></i> Yeni Kitap
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Members/Index">
                            <i class="bi bi-people-fill"></i> Üyeler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Loans/Index">
                            <i class="bi bi-journal-check"></i> Ödünç
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear"></i> Yönetim
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Authors/Index"><i class="bi bi-people"></i> Yazarlar</a></li>
                            <li><a class="dropdown-item" href="/Publishers/Index"><i class="bi bi-building"></i> Yayınevleri</a></li>
                            <li><a class="dropdown-item" href="/Categories/Index"><i class="bi bi-tags"></i> Kategoriler</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            <p>&copy; 2024 - Kütüphane Yönetim Sistemi</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>